<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MyMainLayout">

    <ScrollView
        style="@style/MyScrollView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Register"
                android:id="@+id/textView2"
                android:layout_marginBottom="@dimen/field_margin"
                android:layout_marginTop="@dimen/field_margin"
                android:textSize="@dimen/font_size_large" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="1."
                    android:id="@+id/textView3"
                    android:textSize="@dimen/font_size_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Fill in your personal data."
                    android:id="@+id/textView4"
                    android:textSize="@dimen/font_size_small" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="2."
                    android:id="@+id/textView5"
                    android:textSize="@dimen/font_size_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Click submit to complete the registration."
                    android:id="@+id/textView6"
                    android:textSize="@dimen/font_size_small" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/field_margin">

                <Button
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:text=" "
                    android:id="@+id/btBackReg"
                    android:onClick="buttonBackRegOnClick"
                    android:layout_gravity="left"
                    android:background="@drawable/but_back" />

                <Button
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:text=" "
                    android:id="@+id/btNextReg"
                    android:onClick="buttonNextRegOnClick"
                    android:layout_gravity="left"
                    android:background="@drawable/but_next"
                    android:layout_marginLeft="@dimen/help_button_space" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
