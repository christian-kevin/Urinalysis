<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Button Rectangle Style -->
    <style name="MyMenuRectangleButton" parent="android:Widget.Button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">#ffcc99</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/but_bg</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!-- Main Layout -->
    <style name="MyMainLayout" >
        <item name="android:paddingTop">40dp</item>
        <item name="android:paddingBottom">45dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/bg_app</item>
    </style>

    <!-- Scroll View Style -->
    <style name="MyScrollView" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">45dp</item>
    </style>


</resources>
